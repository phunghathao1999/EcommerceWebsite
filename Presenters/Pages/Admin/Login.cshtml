@page
@model Presenters.Pages.Admin.LoginModel
@{
    Layout = null;
}
<html lang="en">
<head>
  <title>Đăng nhập</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
  <div class="container">
    <div class="col-sm-4">
      <form method="POST">
        <br><br>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
          <label for="email">Tên đăng nhập:</label>
          <input type="Email" asp-for="login.Email" class="form-control" placeholder="Nhập tên đăng nhập" id="nameaccount" >
          <span asp-validation-for="login.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label for="pwd">Mật khẩu:</label>
          <input type="password" asp-for="login.Password" class="form-control" placeholder="Nhập mật khẩu" id="pwd" >
          <span asp-validation-for="login.Password" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
          <label class="form-check-label" asp-for="login.RememberMe">
            <input asp-for="login.RememberMe" class="form-check-input" type="checkbox"> Ghi nhớ
          </label>
        </div>
        <button type="submit" class="btn btn-primary">Đăng nhập</button>
      </form>
    </div>
  </div>
</body>
</html>